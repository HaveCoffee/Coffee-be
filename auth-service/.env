# .env file

# AWS RDS PostgreSQL Credentials
PG_HOST=your-aws-rds-endpoint.us-east-1.rds.amazonaws.com
PG_USER=postgres_master_user
PG_PASSWORD=YourSecurePassword
PG_DATABASE=auth_db
PG_PORT=5432

# JWT Secret Key
JWT_SECRET=SUPER_SECRET_KEY_FOR_JWT_SIGNING

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Twilio SMS (Mobile OTP) - SIGNUP step
TWILIO_ACCOUNT_SID=ACXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_VERIFY_SERVICE_SID=VAXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
# Note: Twilio Verify is highly recommended for OTP

# Nodemailer (Email OTP) - VERIFY-MOBILE step
EMAIL_HOST=smtp.gmail.com # Use your actual SMTP host (e.g., from SendGrid, Google, etc.)
EMAIL_PORT=587
EMAIL_USER=your_sending_email@gmail.com
EMAIL_PASS=your_email_app_password