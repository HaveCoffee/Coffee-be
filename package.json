{
  "name": "coffee-backend-services",
  "version": "1.0.0",
  "description": "Backend services for Coffee Social Media App - Auth and Chat services",
  "scripts": {
    "auth": "npm run dev --prefix ./auth-service",
    "chat": "npm start --prefix ./chat_service",
    "dev:all": "concurrently --names \"AUTH,CHAT\" --prefix-colors \"blue,green\" \"npm run auth\" \"npm run chat\"",
    "start:auth": "npm start --prefix ./auth-service",
    "start:chat": "npm start --prefix ./chat_service",
    "start:all": "concurrently --names \"AUTH,CHAT\" --prefix-colors \"blue,green\" \"npm run start:auth\" \"npm run start:chat\""
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "socket.io-client": "^4.8.1",
    "twilio": "^4.20.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.0.2"
  }
}
